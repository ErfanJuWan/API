<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medbiru"
    android:orientation="vertical"
    tools:context=".Riwayat_Pengaduan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Riwayat Pengaduan"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>



        <ScrollView
            android:background="@drawable/bg_aduan"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="25dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/tv_idpengaduan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID pengaduan : " />

                        <TextView
                            android:id="@+id/no_aduan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_idpengaduan"
                            android:text="0000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="dd/mm/yy" />

                        <TextView
                            android:id="@+id/text_riwayat_aduan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_idpengaduan"
                            android:layout_marginTop="10dp"
                            android:text="@string/lorem_ipsum" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/pembungkusimage"
                            android:layout_width="350dp"
                            android:layout_height="150dp"
                            android:layout_below="@+id/text_riwayat_aduan"
                            android:layout_marginTop="20dp"
                            app:cardCornerRadius="25dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/imagemajor" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status : "
                            android:layout_below="@+id/pembungkusimage"
                            android:layout_marginTop="15dp"
                            android:id="@+id/status"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="proses/dibatalkan/selesai"
                            android:layout_toRightOf="@+id/status"
                            android:layout_below="@+id/pembungkusimage"
                            android:layout_marginTop="15dp"
                            />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:text="batalkan"
                                android:layout_marginTop="15dp"
                                android:textColor="@color/white"
                                android:background="@drawable/bg_button_riwayat"
                                android:layout_below="@id/pembungkusimage"
                                android:layout_alignEnd="@id/pembungkusimage"
                                />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="25dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/tv_idpengaduan1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID pengaduan : " />

                        <TextView
                            android:id="@+id/no_aduan1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tv_idpengaduan1"
                            android:text="0000" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:text="dd/mm/yy" />

                        <TextView
                            android:id="@+id/text_riwayat_aduan1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_idpengaduan1"
                            android:layout_marginTop="10dp"
                            android:text="@string/lorem_ipsum" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/pembungkusimage1"
                            android:layout_width="350dp"
                            android:layout_height="150dp"
                            android:layout_below="@+id/text_riwayat_aduan1"
                            android:layout_marginTop="20dp"
                            app:cardCornerRadius="25dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/imagemajor" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status : "
                            android:layout_below="@+id/pembungkusimage1"
                            android:layout_marginTop="15dp"
                            android:id="@+id/status1"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="proses/dibatalkan/selesai"
                            android:layout_toRightOf="@+id/status1"
                            android:layout_below="@+id/pembungkusimage1"
                            android:layout_marginTop="15dp"
                            />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="batalkan"
                            android:layout_marginTop="15dp"
                            android:textColor="@color/white"
                            android:background="@drawable/bg_button_riwayat"
                            android:layout_below="@id/pembungkusimage1"
                            android:layout_alignEnd="@id/pembungkusimage1"
                            />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

</LinearLayout>