<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/medbiru"
    android:orientation="vertical"
    tools:context=".Buat_Pengaduan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat Pengaduan"
            android:layout_marginLeft="40dp"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            />

    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_aduan"
        >

        <TextView
            android:id="@+id/tv_pengaduan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi Pengaduan"
            android:layout_marginLeft="58dp"
            android:textSize="20sp"
            android:layout_marginTop="65dp"
            android:textColor="@color/medbiru"
            />




        <androidx.cardview.widget.CardView
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_pengaduan"
            android:id="@+id/ta_pengaduan"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="25dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text|textMultiLine"
                android:hint="Tulis disini"
                android:background="@color/white"
                android:padding="3dp"
                />

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ta_pengaduan"
            android:layout_marginLeft="58sp"
            android:text="Upload foto"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="@color/medbiru"
            android:id="@+id/text_upload"
            />

        <androidx.cardview.widget.CardView
            android:layout_below="@+id/text_upload"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="15dp"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="15dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imagemajor"
                />

        </androidx.cardview.widget.CardView>


        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_button"
            android:text="kirim"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            />



    </RelativeLayout>


</LinearLayout>